{
  "name": "lantern",
  "displayName": "Lantern",
  "description": "Give your VS Code workspaces unique colors with optional Philips Hue integration",
  "version": "1.1.0",
  "publisher": "sinedied",
  "main": "./dist/extension.js",
  "scripts": {
    "build": "npm run check:types && npm run lint && node esbuild.js",
    "build:icon-font": "npx -y svgtofont --sources assets --output .temp --fontName lantern 1>/dev/null && cp .temp/lantern.woff assets/ && rm -rf .temp && echo 'Icon font generated successfully.'",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "build:tests": "tsc -p . --outDir out",
    "build:package": "npm run check:types && npm run lint && node esbuild.js --production",
    "check:types": "tsc --noEmit",
    "pretest": "npm run build:tests && npm run build && npm run lint",
    "test": "vscode-test",
    "lint": "eslint src",
    "format": "prettier --write src/**/*.ts",
    "vscode:prepublish": "npm run build:package",
    "package": "npx -y vsce package",
    "release": "npx -y semantic-release && npx -y vsce publish",
    "release:check": "npx -y semantic-release --dry-run",
    "install:vsix": "npm run -s package && code --install-extension lantern-*.vsix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sinedied/lantern-vscode-extension.git"
  },
  "bugs": {
    "url": "https://github.com/sinedied/lantern-vscode-extension/issues"
  },
  "homepage": "https://github.com/sinedied/lantern-vscode-extension#readme",
  "keywords": [
    "vscode-extension",
    "colors",
    "workspace",
    "theme",
    "philips-hue",
    "productivity",
    "hue",
    "ai",
    "unique",
    "customization",
    "language-model-tools"
  ],
  "engines": {
    "vscode": "^1.102.0"
  },
  "release": {
    "extends": "semantic-release-node-prep",
    "branches": "main"
  },
  "galleryBanner": {
    "color": "#182229",
    "theme": "dark"
  },
  "icon": "icon.png",
  "categories": [
    "Themes",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "icons": {
      "lantern-on": {
        "description": "Lantern on",
        "default": {
          "fontPath": "./assets/lantern.woff",
          "fontCharacter": "\\EA02"
        }
      },
      "lantern-off": {
        "description": "Lantern off",
        "default": {
          "fontPath": "./assets/lantern.woff",
          "fontCharacter": "\\EA01"
        }
      }
    },
    "commands": [
      {
        "command": "lantern.assignUniqueColor",
        "title": "Lantern: Assign unique color"
      },
      {
        "command": "lantern.assignColorManually",
        "title": "Lantern: Assign color manually"
      },
      {
        "command": "lantern.suggestColorWithAI",
        "title": "Lantern: Suggest color with AI"
      },
      {
        "command": "lantern.toggle",
        "title": "Lantern: Toggle on/off"
      },
      {
        "command": "lantern.enableHue",
        "title": "Lantern: Enable Philips Hue"
      },
      {
        "command": "lantern.disableHue",
        "title": "Lantern: Disable Philips Hue"
      },
      {
        "command": "lantern.setHueIntensity",
        "title": "Lantern: Set Philips Hue intensity"
      },
      {
        "command": "lantern.resetWorkspaceColor",
        "title": "Lantern: Reset workspace color"
      },
      {
        "command": "lantern.showCommands",
        "title": "Lantern: Show commands"
      }
    ],
    "configuration": {
      "title": "Lantern",
      "properties": {
        "lantern.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable Lantern"
        },
        "lantern.hueEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable Philips Hue integration"
        },
        "lantern.hueLightIds": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of Philips Hue light IDs to control"
        },
        "lantern.hueBridgeIp": {
          "type": "string",
          "default": "",
          "description": "IP address of the Philips Hue bridge"
        },
        "lantern.hueUsername": {
          "type": "string",
          "default": "",
          "description": "Philips Hue bridge username/API key"
        },
        "lantern.hueDefaultColor": {
          "type": "string",
          "default": "#000000",
          "description": "Default color for Hue lights when no workspace color is assigned. Use #000000 to turn lights off."
        },
        "lantern.hueIntensity": {
          "type": "number",
          "default": 100,
          "minimum": 0,
          "maximum": 100,
          "description": "Brightness/intensity of Philips Hue lights (0-100, where 100 is maximum brightness)"
        },
        "lantern.workspaceColor": {
          "type": "object",
          "default": {},
          "description": "Workspace-specific color mappings (workspace path -> color)"
        },
        "lantern.color": {
          "type": "string",
          "description": "Workspace-specific color (set in .vscode/settings.json to override global settings)"
        }
      }
    },
    "languageModelTools": [
      {
        "name": "set_workspace_color",
        "displayName": "Set workspace color",
        "modelDescription": "Set the color for the current or specified workspace. This tool allows you to programmatically assign a hex color to a VS Code workspace, which will be applied to the status bar background. The color must be in hex format (#RRGGBB). If no workspace path is provided, it will use the currently active workspace.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "setLanternColor",
        "icon": "lantern-on",
        "userDescription": "Set the Lantern color for the current or specified workspace.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "color": {
              "type": "string",
              "description": "The hex color code to set (e.g., #ff0000). Must be in 6-character hex format.",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            },
            "workspacePath": {
              "type": "string",
              "description": "Optional absolute path to the workspace directory. If not provided, uses the current active workspace."
            }
          },
          "required": ["color"]
        }
      },
      {
        "name": "get_workspace_colors_and_context",
        "displayName": "Get workspace colors and context",
        "modelDescription": "Retrieve information about current workspace assigned color, all used colors across workspaces to avoid duplicates, and project context from README file. Use this tool to understand the current color scheme and project context before suggesting or setting new colors.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "lanternContext",
        "icon": "list-unordered",
        "userDescription": "Get current and other workspace colors and project context",
        "inputSchema": {
          "type": "object",
          "properties": {
            "includeProjectContext": {
              "type": "boolean",
              "description": "Whether to include project context from README files. Default is true.",
              "default": true
            }
          }
        }
      }
    ]
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.9",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  }
}
